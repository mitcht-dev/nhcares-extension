{
  "manifest_version": 3,
  "name": "New Horizons Alayacare Extension",
  "version": "0.0.0.1",
  "description": "adds additional functionality for NH workflows",

  "icons": {
    "128": "icons/nha_icon128.png"
  },

  "permissions": [
    "webRequest"
  ],

  "host_permissions": [
    "*://*.alayacare.com/*"
  ],

  "background": {
    "service_worker": "serviceworkers/service-worker.js"
  },
  
  "content_scripts": [
    {
      "js": [
        "contentscripts/fetchextra.js"
      ],
      "matches": [
        "https://nhcares.alayacare.com/*"
      ],
      "run_at": "document_start"
    }
  ]
}