{
  "manifest_version": 3,
  "name": "New Horizons Alayacare Extension",
  "version": "0.0.0.2",
  "description": "adds additional functionality for NH workflows",

  "icons": {
    "128": "icons/nha_icon128.png"
  },
  
  "content_scripts": [
    {
      "js": [
        "contentscripts/schedule_visits.js",
        "contentscripts/content.js",
        "contentscripts/utils.js"
      ],
      "matches": [
        "*://*.alayacare.com/*",
        "*://*.alayacare.ca/*",
        "*://localhost/*"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "js": [
        "contentscripts/utils.js"
      ],
      "matches": [
        "*://*.alayacare.com/*",
        "*://*.alayacare.ca/*",
        "*://localhost/*"
      ],
      "run_at": "document_idle"
    }
  ]
}